<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="645dp"
    android:layout_height="wrap_content" >
    
	<TableRow 
        android:layout_marginBottom="5dp"
        >
        <ImageButton 
            android:src="@drawable/table_number_input_7"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber7"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_8"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber8"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_9"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber9"
            />
        <ImageButton 
	        android:src="@drawable/table_number_input_0"
	        style="@style/table_number_input_btn_style_small"
	        android:onClick="onClickBtnNumber0"
         	/>
        <ImageButton 
	        android:src="@drawable/table_number_input_back"
	        style="@style/table_number_input_btn_style_for_back"
	        android:onClick="onClickBtnNumberBack"
         	/>
    </TableRow>
    
    <TableRow 
        android:layout_marginBottom="5dp"
        >
        <ImageButton 
            android:src="@drawable/table_number_input_4"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber4"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_5"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber5"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_6"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber6"
            />
        
        <ImageButton 
	         android:src="@drawable/table_number_input_c"
	         android:layout_span="2" 
	         style="@style/table_number_input_btn_style_big"
	         android:onClick="onClickBtnC"
	         />
    </TableRow>
    
    <TableRow 
        >

        <ImageButton 
            android:src="@drawable/table_number_input_1"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber1"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_2"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber2"
            />
        <ImageButton 
            android:src="@drawable/table_number_input_3"
            style="@style/table_number_input_btn_style_small"
            android:onClick="onClickBtnNumber3"
            />
                
        <ImageButton 
	         android:src="@drawable/table_number_input_ok"
	         android:layout_span="2"
	         style="@style/table_number_input_btn_style_big"
	         android:onClick="onClickBtnOK"
	         />
    </TableRow>
    
</TableLayout>
