 	<include 
 	    layout="@layout/bar_terminal_device_merchant_info"
 	    android:layout_alignParentTop="true"
 	    android:id="@+id/barTitleLayout"/>
 	<LinearLayout 
 	    android:layout_width="fill_parent"
 	    android:layout_height="fill_parent"
 	    android:layout_below="@+id/barTitleLayout"
 	    android:layout_centerInParent="true"
 	    android:gravity="center">
 	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/calculator_num_key_bg">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center"
				style="@style/calculator_num_key_display_style" >         
		    	<EditText 
		    	    android:id="@+id/input_money_et_money"
			        android:background="@drawable/number_input_edittext_bg"
			        android:textSize="80sp"
			       	style="@style/calculator_display_screen_style"
			        android:hint="@string/input_money_et_money_hint"
			        android:gravity="right|center_vertical"
			        android:paddingRight="20dp"
			        android:textColor="@android:color/white"
			        android:maxLength="9"
			        />
		    	
		        <include 
		            layout="@layout/table_number_input"
		            />
	        </LinearLayout>
		</LinearLayout>
 	</LinearLayout>
</RelativeLayout>
