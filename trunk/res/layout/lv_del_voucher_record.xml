<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lv_del_voucher_record_tv_voucherName"
        style="@style/del_voucher_record_lv_tv"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/lv_del_voucher_record_tv_delDate"
        style="@style/del_voucher_record_lv_tv"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/lv_del_voucher_record_tv_voucherId"
        style="@style/del_voucher_record_lv_tv"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/lv_del_voucher_record_tv_voucherNum"
        style="@style/del_voucher_record_lv_tv"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/lv_del_voucher_record_btn_operation"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_rectangle"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lv_del_voucher_record_tv_status"
            android:layout_width="match_parent"
            style="@style/del_voucher_record_lv_tv"
             />
    </LinearLayout>

</LinearLayout>