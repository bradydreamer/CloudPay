<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/titlebar" >

    <LinearLayout
        android:id="@+id/titlebar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/titlebar_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/titlebar_btn_back"
            android:textColor="@android:color/white"
            android:textSize="30px"
            android:onClick="onClickLeftButton"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            />
        <Button
            android:id="@+id/title_left_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"
            android:text="9.9.9"
            android:textColor="@color/white"
            android:background="@drawable/titlebar_left_version_background"
            android:visibility="invisible"
            android:onClick="onAbout"/>
    </LinearLayout>
    
    <Button 
        android:id="@+id/titlebar_btn_title"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="38px"
        android:singleLine="true"
        android:enabled="false"
        android:background="#00000000"
        />
    
    <Button 
        android:id="@+id/titlebar_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:enabled="false"
        android:textSize="20px"
        android:textColor="@android:color/white"
        android:background="#00000000"
        />

</RelativeLayout>