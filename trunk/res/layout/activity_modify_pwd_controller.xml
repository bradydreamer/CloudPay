<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" 
    android:background="@drawable/activity_frame_bg">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_password">

	        <EditText
	            android:id="@+id/orignalPwdTextView"
	            android:layout_width="430dp"
	            android:layout_height="80dp"
	            android:layout_marginLeft="80dp"
	            android:background="@null"
	            android:paddingLeft="10dp"
	            android:singleLine="true"
	            android:inputType="textPassword"
	            android:hint="@string/msg_mod_pwd_hint_pwd_origin_input"
	            android:textSize="35sp"/>
        </LinearLayout>
        <LinearLayout  
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_password">
	        <EditText 
	            android:id="@+id/firstPwdTextView"
	            android:layout_width="430dp"
	            android:layout_height="80dp"
	            android:layout_marginLeft="80dp"
	            android:textSize="35sp"
	            android:paddingLeft="10dp"
	            android:singleLine="true"
	            android:inputType="textPassword"
	            android:hint="@string/msg_mod_pwd_hint_pwd_input"
	            android:background="@null"/>
        </LinearLayout>
        <LinearLayout  
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_password">
	        <EditText 
	            android:id="@+id/secondPwdTextView"
	            android:layout_width="430dp"
	            android:layout_height="80dp"
	            android:layout_marginLeft="80dp"
	            android:textSize="35sp"
	            android:paddingLeft="10dp"
	            android:singleLine="true"
	            android:inputType="textPassword"
	            android:hint="@string/msg_mod_pwd_hint_pwd_input_confirm"
	            android:background="@null"/>
        </LinearLayout>

        <Button 
            android:layout_marginTop="30dp"
            android:layout_width="540dp"
            android:layout_height="90dp"
            android:textSize="46sp"
            android:textColor="@android:color/white"
            android:text="@string/del_voucher_record_search_btn_confirm_text"
            android:background="@drawable/login_btn"
            android:onClick="onClickBtnOK"/>
    </LinearLayout>
    
</LinearLayout>
