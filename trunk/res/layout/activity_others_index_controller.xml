<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center" >

    <LinearLayout 
        style="@style/module_layout"
        >
        <Button 
	        style="@style/module_logo"
	        android:background="@drawable/logo_pre_authorization"
	        />
        <TextView 
            style="@style/module_title"
            android:text="@string/others_index_module_title_pre_authorization"
            />
    </LinearLayout>
    
    <LinearLayout 
        style="@style/module_layout"
        >
        <Button 
	        style="@style/module_logo"
	        android:background="@drawable/logo_balance"
	        android:onClick="gotoBalance"
	        />
        <TextView 
            style="@style/module_title"
            android:text="@string/others_index_module_title_balance"
            />
    </LinearLayout>
    
	<LinearLayout 
        style="@style/module_layout"
        >
        <Button 
	        style="@style/module_logo"
	        android:background="@drawable/logo_settings"
	        android:onClick="gotoSettings"
	        />
        <TextView 
            style="@style/module_title"
            android:text="@string/others_index_module_title_settings"
            />
    </LinearLayout>
    
</LinearLayout>

