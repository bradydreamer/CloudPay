<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:background="@drawable/main_page_bg_bitmap" >
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:orientation="vertical"
	     >
	
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginBottom="10dp"
		    android:textSize="@dimen/del_voucher_record_textview_text_size"
		    android:textColor="@color/color_for_historical_consumption_search_text"
	        android:text="@string/consumption_record_search_tv_startDate"
	        />
	    
	    <EditText
	        android:id="@+id/trade_statistics_search_et_startDate"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="50dp"
		    android:paddingLeft="40dp"
		    android:background="@drawable/datetimeinput"
		    android:textSize="@dimen/del_voucher_record_edittext_text_size"
		    android:textColor="@color/color_for_historical_consumption_search_edittext"
	        android:focusable="false"
	        android:inputType="date"
	        android:onClick="showStartDatePicker"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginBottom="10dp"
		    android:textSize="@dimen/del_voucher_record_textview_text_size"
	        android:text="@string/consumption_record_search_tv_endDate"
	        android:textColor="@color/color_for_historical_consumption_search_text"
	        />
	    
	    <EditText
	        android:id="@+id/trade_statistics_search_et_endDate"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="40dp"
		    android:background="@drawable/datetimeinput"
		    android:textSize="@dimen/del_voucher_record_edittext_text_size"
		    android:textColor="@color/color_for_historical_consumption_search_edittext"
	        android:focusable="false"
	        android:inputType="date"
	        android:onClick="showEndDatePicker"
	        />
	    
	    <Button 
	        android:layout_width="540dp"
		    android:layout_height="80dp"
	        android:layout_marginTop="100dp"
	        android:text="@string/consumption_record_search_btn_confirm_text"
	        android:textColor="@android:color/white"
	        android:textSize="@dimen/del_voucher_record_button_text_size"
	        android:background="@drawable/historical_consumption_button_ok_background"
	        android:onClick="onConfirm"
	        />
	   
	</LinearLayout>
</LinearLayout>
