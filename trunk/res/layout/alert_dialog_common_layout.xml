<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/alert_common_dialog_width"
    android:layout_height="@dimen/alert_common_dialog_height"
    android:background="@color/main_page_backgroud"
    android:orientation="vertical" >
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/alert_common_dialog_title_height"
	    android:orientation="horizontal"
	    android:id="@+id/titleLayout"
	    android:background="@drawable/titlebar" >
		<ImageView 
		    android:layout_width="@dimen/alert_common_dialog_title_image_width_height"
		    android:layout_height="@dimen/alert_common_dialog_title_image_width_height"
		    android:src="@drawable/info"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/dialog_title_text"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/alert_common_dialog_title_height"
	        android:text="@string/alert_common_warn_msg"
	        android:layout_marginLeft="30.0px"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textColor="@android:color/white"
	        android:textSize="@dimen/alert_common_dialog_title_text_size" />
	
	</LinearLayout>
   
   	<TextView
        android:id="@+id/dialog_common_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52.0px"
        android:layout_marginRight="60.0px"
        android:textSize="@dimen/dialog_content_text_size"
        android:textColor="@color/about_gray_text"
        android:textStyle="normal"
        android:layout_below="@+id/titleLayout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20.0px"
        android:layout_marginLeft="15.0px"
        android:layout_marginRight="15.0px"
        android:layout_marginTop="5.0px"
        android:id="@+id/buttonContainerLayout"
        android:weightSum="2.0"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8.0px"
            android:id="@+id/okLayout" >

            <Button
                android:id="@+id/ok"
                android:layout_width="@dimen/alert_common_dialog_ok_width"
                android:layout_height="@dimen/alert_common_dialog_ok_height"
                android:background="@drawable/button_confirm_background"
                android:text="@string/str_ok"
                android:textColor="@color/white"
                android:textSize="20.0px" />
        </RelativeLayout>

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/alert_common_dialog_ok_width"
            android:layout_height="@dimen/alert_common_dialog_ok_height"
            android:layout_marginLeft="15.0px"
            android:background="@drawable/button_confirm_background"
            android:text="@string/alert_btn_negative"
            android:textColor="@color/white"
            android:textSize="20.0px"
            android:layout_toRightOf="@+id/okLayout"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>