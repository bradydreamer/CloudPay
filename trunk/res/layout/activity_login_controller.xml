<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal" 
    android:background="@drawable/main_page_bg_bitmap">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/login_username">

	        <EditText
	            android:id="@+id/login_et_userName"
	            android:layout_width="430dp"
	            android:layout_height="80dp"
	            android:layout_marginLeft="80dp"
	            android:background="@null"
	            android:paddingLeft="10dp"
	            android:singleLine="true"
	            android:hint="@string/msg_account_hint"
	            android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout  
            android:layout_width="540dp"
            android:layout_height="80dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            android:background="@drawable/login_password">
	        <EditText 
	            android:id="@+id/login_et_pwd"
	            android:layout_width="430dp"
	            android:layout_height="80dp"
	            android:layout_marginLeft="80dp"
	            android:textSize="40sp"
	            android:paddingLeft="10dp"
	            android:singleLine="true"
	            android:hint="@string/msg_pwd_hint"
	            android:inputType="textPassword"
	            android:background="@null"/>
        </LinearLayout>       

        <Button 
            android:layout_marginTop="120dp"
            android:layout_width="@dimen/login_search_btn_width"
	    	android:layout_height="@dimen/login_search_btn_height"
            android:textSize="@dimen/login_search_btn_text_size"
            android:textColor="@android:color/white"
            android:text="@string/msg_login"
            android:background="@drawable/button_blue_background"
            android:onClick="onClickBtnOK"/>
    </LinearLayout>
    
</LinearLayout>
